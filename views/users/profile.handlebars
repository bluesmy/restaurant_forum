<div class="card mb-3">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="{{profile.image}}" class="card-img" alt="..." width="300px" height="300px">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{profile.name}}</h5>
        <h6 class="card-text">{{profile.email}}</h6>
        {{#ifCond profile.id user.id}}
        <a class="btn btn-primary" href="/users/{{profile.id}}/edit" role="button">Edit</a>
        {{/ifCond}}
      </div>
    </div>
  </div>
</div>